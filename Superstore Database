-- limit the rows shown in order to see all categories in the table
SELECT *
FROM superstore
LIMIT 5;

-- sort the price column in ascending order
SELECT price
FROM superstore
ORDER BY price ASC;

-- find the average price in the data
SELECT AVG (price)
FROM superstore;

-- find the max price for the items in the kitchen supplies category
SELECT MAX (price)
FROM superstore
WHERE category='Kitchen Supplies';

-- find the quantity of Smart Led Tv and Robot vacuum cleaner that are in stock
SELECT stock_quantity, item_name
FROM superstore
where item_name = 'Smart LED TV' or item_name = 'Robot Vacuum Cleaner'
